<?xml version="1.0" encoding="UTF-8"?>

<domain>

	<initialstate>
	
		<variable id="A">
			<value prob="0.6">[a1]</value>
			<value prob="0.4">[a1,a2]</value>
		</variable>
		

<variable id="u_u">
<value prob="0.5">take the ball</value>
<value prob="0.2">take the basket</value>
<value prob="0.1">blabla</value>
</variable>

	</initialstate>


<model trigger="u_u">


<rule id="r12">
	<case>
		<condition>
		<if var="A" value="a2" relation="!in"/>
		</condition>
	<effect>
		<add var="A" value="a2"/>
	</effect>
	</case>
</rule>


<rule id="r13">
	<case>
		<effect>
			<remove var="A" value="a1"/>
		</effect>
	</case>
</rule>


<rule id="r14">
	<case>
		<condition>
			<if var="u_u" value="take the {OBJ}" relation="in"/>
		</condition>
		<effect>
			<set var="a_u" value="Request({OBJ})"/>
		</effect>
	</case>
</rule>

</model>
</domain>