<?xml version="1.0" encoding="UTF-8"?>

<model trigger="a_m" type="update">

	
	<rule id="nextintention">
		<case>
			<condition operator="and">
				<if var="a_m" value="Confirm(*)" relation="!=" />
				<if var="a_m" value="AskRepeat" relation="!=" />
				<if var="a_m" value="None" relation="!=" />
			</condition>
			<effect>
				<set var="completed-task" value="true" />
			</effect>
		</case>
		<case>
			<condition operator="or">
				<if var="i_u" value="None" />
			</condition>
			<effect>
				<set var="completed-task" value="true" />
			</effect>
		</case>
		<case>
		<effect prob="0.9">
				<set var="completed-task" value="false" />
		</effect>
		<effect prob="0.1">
			<set var="completed-task" value="true" />
		</effect>
		</case>
	</rule>
	
	<rule id="changelastMove">
		<case>
			<condition>
				<if var="a_m" value="Do({X})"/>
			</condition>
			<effect>
				<set var="lastMove" value="{X}"/>
			</effect>
		</case>
	</rule>

	<rule id="changeLastAm">
		<case>
			<condition>
				<if var="a_m" value="None" relation="!="/>
			</condition>
			<effect>
				<set var="last(a_m)" value="{a_m}"/>
			</effect>
		</case>
	</rule>
	
	
	<rule id="perception1">
		<case>
			<condition>
				<if var="a_m" value="Do(Move(*))" />
				<if var="perceived" value="RedObj" relation="notcontains" />
			</condition>
			<effect prob="0.3">
				<add var="perceived" value="RedObj" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="a_m" value="Do(Move(*))" />
			</condition>
			<effect prob="0.2">
				<remove var="perceived" value="RedObj" />
			</effect>
		</case>
	</rule>

	<rule id="perception2">
		<case>
			<condition>
				<if var="a_m" value="Do(Move(*))" />
				<if var="perceived" value="BlueObj" relation="notcontains" />
			</condition>
			<effect prob="0.3">
				<add var="perceived" value="BlueObj" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="a_m" value="Do(Move(*))" />
			</condition>
			<effect prob="0.2">
				<remove var="perceived" value="BlueObj" />
			</effect>
		</case>
	</rule>


	<rule id="carriedstuff">
		<case>
			<condition>
				<if var="a_m" value="Do(PickUp({X}))" />
			</condition>
			<effect prob="0.9">
				<add var="carried" value="{X}" />
			</effect>
		</case>
		<case>
			<condition operator="and">
				<if var="a_m" value="Do(Release)" />
				<if var="carried" value="{X}" relation="contains"/>
			</condition>
			<effect prob="0.9">
				<remove var="carried" value="{X}"/>
			</effect>
		</case>
	</rule>
	
</model>