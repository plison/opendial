<?xml version="1.0" encoding="UTF-8"?>

<model trigger="completed-task,perceived,carried" type="update">

	<rule id="clearorcontinue">
		<case>
			<condition>
				<if var="completed-task" value="true" />
			</condition>
			<effect>
				<clear var="i_u" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="completed-task" value="false" />
			</condition>
			<effect>
				<set var="i_u" value="{i_u}" />
			</effect>
		</case>
	</rule>

	<rule id="moveprior">
		<case>
			<condition>
				<if var="completed-task" value="true" />
			</condition>
			<effect prob="0.1995">
				<set var="i_u" value="Move(Left)" />
			</effect>
			<effect prob="0.1918">
				<set var="i_u" value="Move(Forward)" />
			</effect>
			<effect prob="0.0705">
				<set var="i_u" value="Move(Backward)" />
			</effect>
			<effect prob="0.0752">
				<set var="i_u" value="Move(Right)" />
			</effect>
			<effect prob="0.1223">
				<set var="i_u" value="Move(Left,Short)" />
			</effect>
			<effect prob="0.0479">
				<set var="i_u" value="Move(Forward,Short)" />
			</effect>
			<effect prob="0.0612">
				<set var="i_u" value="Move(Backward,Short)" />
			</effect>
			<effect prob="0.074">
				<set var="i_u" value="Move(Right,Short)" />
			</effect>
			<effect prob="0.0773">
				<set var="i_u" value="Move(Turn)" />
			</effect>	
			<effect prob="0.0805"/>
		</case>
	</rule>
	
	<rule id="perceptionprior_see">
		<quantifier id="OBJ"/>
		<case>
			<condition>
				<if var="perceived" value="{X}" relation="contains"/>
				<if var="completed-task" value="true" />
			</condition>				
			<effect prob="0.2">
				<set var="i_u" value="DoYouSee({OBJ})" />
			</effect>
			<effect prob="0.2">
				<set var="i_u" value="WhatDoYouSee" />
			</effect>
			<effect prob="0.6"/>
		</case>
	</rule>
	
	<rule id="perceptionprior_nosee">
		<case>		
		<condition>
				<if var="completed-task" value="true" />
		</condition>		
			<effect prob="0.0487">
				<set var="i_u" value="DoYouSee(RedObj)" />
			</effect>
			<effect prob="0.02">
				<set var="i_u" value="DoYouSee(BlueObj)" />
			</effect>
			<effect prob="0.0748">
				<set var="i_u" value="WhatDoYouSee" />
			</effect>
			<effect prob="0.8565"/>
		</case>
	</rule>
	
	
	<rule id="chitchatprior">
		<case>
			<condition>			
				<if var="lastMove" value="None"/>
				<if var="completed-task" value="true" />				
			</condition>
			<effect prob="0.1641" >
				<set var="i_u" value="Ask(Name)" />
			</effect>
			<effect prob="0.2431" >
				<set var="i_u" value="Greeting" />
			</effect>
			<effect prob="0.5928"/>
		</case>
		<case>
			<condition>			
				<if var="lastMove" value="Release"/>
			</condition>
			<effect prob="0.1392" >
				<set var="i_u" value="Closing" />
			</effect>
			<effect prob="0.8608"/>
		</case>
		</rule>
	
	
	<rule id="releaseprior">
		<case>
			<condition>
				<if var="completed-task" value="true" />
				<if var="carried" value="[]" relation="!="/>
				<if var="carried" value="None" relation="!="/>
			</condition>
			<effect prob="0.0702">
				<set var="i_u" value="Release" />
			</effect>
			<effect prob="0.9298" />
		</case>
	</rule>
	

	<rule id="pickupprior_see">
		<quantifier id="X"/>
		<case>
			<condition>
				<if var="completed-task" value="true" />
				<if var="carried" value="[]" />
				<if var="perceived" value="{OBJ2}" relation="contains" />
			</condition>
			<effect prob="0.25">
				<set var="i_u" value="PickUp({OBJ2})" />
			</effect>
			<effect prob="0.75" />
		</case>
	</rule>
	
	<rule id="pickupprior_nosee">
		<case>
			<condition>
				<if var="completed-task" value="true" />
				<if var="carried" value="[]" />
			</condition>
			<effect prob="0.0312">
				<set var="i_u" value="PickUp(RedObj)" />
			</effect>
			<effect prob="0.0647">
				<set var="i_u" value="PickUp(BlueObj)" />
			</effect>
			<effect prob="0.1635">
				<set var="i_u" value="PickUp(AtFeet)" />
			</effect>
			<effect prob="0.7406" />
		</case>
	</rule>


</model>
