<?xml version="1.0" encoding="UTF-8"?>

<model trigger="completed-task,perceived,carried" type="update">

	<rule id="clearorcontinue">
		<case>
			<condition>
				<if var="completed-task" value="true" />
			</condition>
			<effect>
				<clear var="i_u" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="completed-task" value="false" />
			</condition>
			<effect>
				<set var="i_u" value="{i_u}" />
			</effect>
		</case>
	</rule>

	<rule id="moveprior">
		<case>
			<condition>
				<if var="completed-task" value="true" />
			</condition>
			<effect prob="theta_moveprior[0]">
				<set var="i_u" value="Move(Left)" />
			</effect>
			<effect prob="theta_moveprior[1]">
				<set var="i_u" value="Move(Forward)" />
			</effect>
			<effect prob="theta_moveprior[2]">
				<set var="i_u" value="Move(Backward)" />
			</effect>
			<effect prob="theta_moveprior[3]">
				<set var="i_u" value="Move(Right)" />
			</effect>
			<effect prob="theta_moveprior[4]">
				<set var="i_u" value="Move(Left,Short)" />
			</effect>
			<effect prob="theta_moveprior[5]">
				<set var="i_u" value="Move(Forward,Short)" />
			</effect>
			<effect prob="theta_moveprior[6]">
				<set var="i_u" value="Move(Backward,Short)" />
			</effect>
			<effect prob="theta_moveprior[7]">
				<set var="i_u" value="Move(Right,Short)" />
			</effect>
			<effect prob="theta_moveprior[8]">
				<set var="i_u" value="Move(Turn)" />
			</effect>	
			<effect prob="theta_moveprior[9]"/>
		</case>
	</rule>
	
	<rule id="perceptionprior_see">
		<quantifier id="OBJ"/>
		<case>
			<condition>
				<if var="perceived" value="{OBJ}" relation="contains"/>
				<if var="completed-task" value="true" />
			</condition>				
			<effect prob="theta_perceive_see_prior[0]">
				<set var="i_u" value="DoYouSee({OBJ})" />
			</effect>
			<effect prob="theta_perceive_see_prior[1]">
				<set var="i_u" value="WhatDoYouSee" />
			</effect>
			<effect prob="theta_perceive_see_prior[2]"/>
		</case>
	</rule>
	
	<rule id="perceptionprior_nosee">
		<case>		
		<condition>
				<if var="completed-task" value="true" />
		</condition>		
			<effect prob="theta_perceive_nosee_prior[0]">
				<set var="i_u" value="DoYouSee(RedObj)" />
			</effect>
			<effect prob="theta_perceive_nosee_prior[1]">
				<set var="i_u" value="DoYouSee(BlueObj)" />
			</effect>
			<effect prob="theta_perceive_nosee_prior[2]">
				<set var="i_u" value="WhatDoYouSee" />
			</effect>
			<effect prob="theta_perceive_nosee_prior[3]"/>
		</case>
	</rule>
	
	
	<rule id="chitchatprior">
		<case>
			<condition>			
				<if var="lastMove" value="None"/>
				<if var="completed-task" value="true" />				
			</condition>
			<effect prob="theta_openingprior[0]" >
				<set var="i_u" value="Ask(Name)" />
			</effect>
			<effect prob="theta_openingprior[1]" >
				<set var="i_u" value="Greeting" />
			</effect>
			<effect prob="theta_openingprior[2]"/>
		</case>
		<case>
			<condition>			
				<if var="lastMove" value="Release"/>
			</condition>
			<effect prob="theta_closingprior[0]" >
				<set var="i_u" value="Closing" />
			</effect>
			<effect prob="theta_closingprior[1]"/>
		</case>
		</rule>
	
	
	<rule id="releaseprior">
		<case>
			<condition>
				<if var="completed-task" value="true" />
				<if var="carried" value="[]" relation="!="/>
				<if var="carried" value="None" relation="!="/>
			</condition>
			<effect prob="theta_releaseprior[0]">
				<set var="i_u" value="Release" />
			</effect>
			<effect prob="theta_releaseprior[1]" />
		</case>
	</rule>
	

	<rule id="pickupprior_see">
		<quantifier id="OBJ2"/>
		<case>
			<condition>
				<if var="completed-task" value="true" />
				<if var="carried" value="[]" />
				<if var="perceived" value="{OBJ2}" relation="contains" />
			</condition>
			<effect prob="theta_pickup_see_prior[0]">
				<set var="i_u" value="PickUp({OBJ2})" />
			</effect>
			<effect prob="theta_pickup_see_prior[1]" />
		</case>
	</rule>
	
	<rule id="pickupprior_nosee">
		<case>
			<condition>
				<if var="completed-task" value="true" />
				<if var="carried" value="[]" />
			</condition>
			<effect prob="theta_pickup_nosee_prior[0]">
				<set var="i_u" value="PickUp(RedObj)" />
			</effect>
			<effect prob="theta_pickup_nosee_prior[1]">
				<set var="i_u" value="PickUp(BlueObj)" />
			</effect>
			<effect prob="theta_pickup_nosee_prior[2]">
				<set var="i_u" value="PickUp(AtFeet)" />
			</effect>
			<effect prob="theta_pickup_nosee_prior[3]" />
		</case>
	</rule>


</model>