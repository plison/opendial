<?xml version="1.0" encoding="UTF-8"?>

<model trigger="a_m" type="decision">

	<rule>
		<case>
			<condition>
				<if var="a_m" value="Do(Move({X}))" />
			</condition>
			<effect util="1">
				<set var="p_m" value="moving {X}" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="a_m" value="Do(PickUp({X}))" />
			</condition>
			<effect util="1">
				<set var="p_m" value="picking up object {X}" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="a_m" value="Do(Release({X}))" />
			</condition>
			<effect util="1">
				<set var="p_m" value="releasing object {X}" />
			</effect>
		</case>
	</rule>


	<rule>
		<case>
			<condition>
				<if var="a_m" value="Ground({X})" />
			</condition>
			<effect util="1">
				<set var="u_m" value="OK, I will now do {X}" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="a_m" value="AskRepeat" />
			</condition>
			<effect util="1">
				<set var="u_m" value="Sorry, could you repeat?" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="a_m" value="Excuse(AlreadyCarryObject)" />
			</condition>
			<effect util="1">
				<set var="u_m" value="Sorry, I cannot do that, I am already carrying an object" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="a_m" value="Excuse(DoNotCarryObject)" />
			</condition>
			<effect util="1">
				<set var="u_m" value="Sorry, I cannot do that, I am not carrying the object" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="a_m" value="Excuse(DoNotSeeObject)" />
			</condition>
			<effect util="1">
				<set var="u_m" value="Sorry, I cannot do that, I do not see the object" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="a_m" value="Confirm({X})" />
			</condition>
			<effect util="1">
				<set var="u_m" value="Should I do {X}?" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="a_m" value="Confirm" />
			</condition>
			<effect util="1">
				<set var="u_m" value="Yes" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="a_m" value="Disconfirm" />
			</condition>
			<effect util="1">
				<set var="u_m" value="No" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="a_m" value="Describe({X})" />
			</condition>
			<effect util="1">
				<set var="u_m" value="I see {X}" />
			</effect>
		</case>
	</rule>


</model>