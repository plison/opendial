<?xml version="1.0" encoding="UTF-8"?>

<domain>

	<initialstate>

		<variable id="u_u">
			<value prob="0.8">hello</value>
		</variable>

		<variable id="var1">
			<value prob="0.4">value1</value>
			<value prob="0.3">value2</value>
		</variable>


		<variable id="var2">
			<value prob="0.5">here is value1</value>
			<value prob="0.1">and value2 is over there</value>
			<value prob="0.4">value3, finally</value>
		</variable>


		<variable id="gaze">
			<distrib type="gaussian">
				<mean>85</mean>
				<variance>40</variance>
			</distrib>
		</variable>


		<variable id="a_u2">
			<value prob="0.7">old thing</value>
		</variable>

		<variable id="u_u2">
			<value prob="0.7">hello there how are you?</value>
			<value prob="0.2">zello here how are you</value>
		</variable>

	</initialstate>


	<model type="update" trigger="u_u" id="firstmodel">

		<rule>
			<case>
				<condition>
					<if var="u_u" value="hello" />
				</condition>
				<effect>
					<set var="a_u" value="Greeting" />
				</effect>
			</case>
		</rule>

	</model>

	<model type="update" trigger="a_u">

		<rule>
			<case>
				<condition>
					<if var="a_u" value="Greeting" />
				</condition>
				<effect prob="0.7">
					<set var="i_u" value="Inform" />
					<set var="obj(i_u)" value="Greet" />
				</effect>
			</case>
		</rule>

	</model>

	<model type="update" trigger="gaze">

		<rule>
			<case>
				<condition>
					<if var="gaze" value="80" relation="&gt;" />
					<if var="gaze" value="100" relation="&lt;" />
				</condition>
				<effect>
					<set var="direction" value="straight" />
				</effect>
			</case>
			<case>
				<condition>
					<if var="gaze" value="80" relation="&lt;" />
				</condition>
				<effect>
					<set var="direction" value="left" />
				</effect>
			</case>
			<case>
				<condition>
					<if var="gaze" value="100" relation="&gt;" />
				</condition>
				<effect>
					<set var="direction" value="right" />
				</effect>
			</case>
		</rule>

	</model>


	<model type="update" trigger="var1">

		<rule>
			<case>
				<condition>
					<if var="var1" value="value2" />
				</condition>
				<effect>
					<set var="o" value="and we have var1={var1}" />
				</effect>
			</case>
			<case>
				<condition operator="and">
					<if var="var1" value="value1" />
					<if var="var2" value="here is {localvar}" relation="in" />
				</condition>
				<effect>
					<set var="o" value="and we have localvar={localvar}" />
				</effect>
			</case>
			<case>
				<condition operator="or">
					<if var="var1" value="value1" relation="!=" />
					<if var="var2" value="{localvar}, finally" relation="in" />
				</condition>
				<effect>
					<set var="o" value="and we have localvar={localvar}" />
				</effect>
			</case>
		</rule>

		<rule>
			<case>
				<condition>
					<if var="var1" value="value2" />
				</condition>
				<effect>
					<set var="o2" value="{var2}" />
				</effect>
			</case>
			<case>
				<condition>
					<if var="var1" value="value1" />
				</condition>
				<effect>
					<set var="o2" value="{var2}" />
				</effect>
			</case>
		</rule>

	</model>

	<model type="update" trigger="u_u2">

		<rule>
			<case>
				<condition operator="or">
					<if var="u_u2" value="hello" relation="in" />
					<if var="u_u2" value="hi" relation="in" />
				</condition>
				<effect>
					<add var="a_u2" value="Greet" />
				</effect>
			</case>
		</rule>

		<rule>
			<case>
				<condition operator="or">
					<if var="u_u2" value="how are you" relation="in" />
				</condition>
				<effect>
					<add var="a_u2" value="HowAreYou" />
				</effect>
			</case>
		</rule>


		<rule>
			<case>
				<condition operator="or">
					<if var="u_u2" value="hello" relation="in" />
					<if var="u_u2" value="hi" relation="in" />
				</condition>
				<effect>
					<set var="a_u3^{random}" value="Greet" />
					<set var="a_u3^{random}.start" value="{match.start}" />
					<set var="a_u3^{random}.end" value="{match.end}" />
					<add var="a_u3" value="a_u3^{random}" />
				</effect>
			</case>
		</rule>

		<rule>
			<case>
				<condition operator="or">
					<if var="u_u2" value="how are you" relation="in" />
				</condition>
				<effect>
					<set var="a_u3^{random}" value="HowAreYou" />
					<set var="a_u3^{random}.start" value="{match.start}" />
					<set var="a_u3^{random}.end" value="{match.end}" />
					<add var="a_u3" value="a_u3^{random}" />
				</effect>
			</case>
		</rule>

		<rule>
			<case>
				<effect>
					<clear var="a_u2" />
				</effect>
			</case>
		</rule>

	</model>

</domain>