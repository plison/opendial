
<declarations>

	<entity name="intent">
		<complexvalue>
			<label>Want</label>
			<feature name="obj">
				<value>X</value>
				<value>Y</value>
			</feature>
		</complexvalue>
	</entity>

	<entity name="robot">
		<feature name="name">
			<range>string</range>
		</feature>
	</entity>

	<variable name="floor">
		<value>init</value>
		<value>wait</value>
		<value>free</value>
		<value>closed</value>
	</variable>

	<variable name="a_u">
		<complexvalue>
			<label>AskFor</label>
			<feature name="obj">
				<value>X</value>
				<value>Y</value>
		</feature>
		</complexvalue>
		<value>Confirm</value>
		<value>Deny</value>
		<value>Unknown</value>
	</variable>

	
	<trigger name="greetingObs" type="surface" content="hi my name is ${name}"/>
	<trigger name="doXObs" type="surface" content="do X"/>
	<trigger name="doYObs" type="surface" content="do Y"/>
	<trigger name="yesObs" type="surface" content="yes"/>
	<trigger name="noObs" type="surface" content="no"/>
	<trigger name="anythingObs" type="surface" content="*"/>
	
	<actiontemplate name="a_m">
		<value label="DoX" type="surface" content="OK, doing X!"/>
		<value label="DoY" type="surface" content="OK, doing Y!"/>
		<value label="SayHi" type="surface" content="Hi ${name}!"/>
		<value label="AskRepeat" type="surface" content="Sorry, could you repeat?"/>
		<value label="InformNotUnderstand" type="surface" content="Sorry, I did not understand"/>
		<value label="RequestIntent" type="surface" content="How may I help you?"/>
	</actiontemplate>
	
	
</declarations>