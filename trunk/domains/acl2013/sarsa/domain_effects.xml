<?xml version="1.0" encoding="UTF-8"?>

<model trigger="a_m" type="update">

	<rule>
		<case>
		<condition operator="or">
			<if var="a_m" value="Ground(*)"/>
			<if var="a_m" value="Confirm(*)"/>
		</condition>
		<effect>
			<add var="history" value="{a_m}"/>
		</effect>
		</case>
	</rule>
	

	<rule>
		<case>
			<condition operator="and">
				<if var="a_m" value="Do({X})" />
			</condition>
			<effect prob="1.0">
				<clear var="history"/>			
			</effect>
		</case>
		<case>
			<condition operator="and">
				<if var="a_m" value="Excuse(*)" />
			</condition>
			<effect prob="1.0">
				<clear var="history"/>			
			</effect>
		</case>
		<case>
			<condition operator="and">
				<if var="a_m" value="Confirm" />
			</condition>
			<effect prob="1.0">
				<clear var="history"/>			
			</effect>
		</case>
		<case>
			<condition operator="and">
				<if var="a_m" value="Disconfirm" />
			</condition>
			<effect prob="1.0">
				<clear var="history"/>			
			</effect>
		</case>
		<case>
			<condition operator="and">
				<if var="a_m" value="Describe(*)" />
			</condition>
			<effect prob="1.0">
				<clear var="history"/>			
			</effect>
		</case>
	</rule>

</model>