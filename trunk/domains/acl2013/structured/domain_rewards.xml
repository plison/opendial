<?xml version="1.0" encoding="UTF-8"?>

<model trigger="a_u" type="decision">

	<rule id="movements">
		<case>
			<condition>
				<if var="i_u" value="Move(*)" />
			</condition>
			<effect util="3">
				<set var="a_m" value="Do({i_u})" />
			</effect>
			<effect util="1.0">
				<set var="a_m" value="Ground({i_u})" />
			</effect>
		</case>
	</rule>

    <rule id="pickup">
		<case>
			<condition operator="and">
				<if var="i_u" value="PickUp({X})" />
				<if var="perceived" value="{X}" relation="contains"/>
				<if var="carried" value="[]"/>
			</condition>
			<effect util="3">
				<set var="a_m" value="Do({i_u})" />
			</effect>
			<effect util="1.0">
				<set var="a_m" value="Ground({i_u})" />
			</effect>
		</case>
		<case>
			<condition operator="and">
				<if var="i_u" value="PickUp({X})" />
				<if var="perceived" value="{X}" relation="contains"/>
				<if var="carried" value="[]" relation="!=" />
			</condition>
			<effect util="3">
				<set var="a_m" value="Excuse(AlreadyCarryObject)" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="i_u" value="PickUp({X})" />
				<if var="perceived" value="{X}" relation="notcontains" />
			</condition>
			<effect util="3">
				<set var="a_m" value="Excuse(DoNotSeeObject)" />
			</effect>
		</case>
	</rule>
	
	
	
	<rule id="release">
		<case>
			<condition operator="and">
				<if var="i_u" value="Release({X})" />
				<if var="carried" value="{X}" relation="contains"/>
			</condition>
			<effect util="3">
				<set var="a_m" value="Do({i_u})" />
			</effect>
			<effect util="1.0">
				<set var="a_m" value="Ground({i_u})" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="i_u" value="Release({X})" />
				<if var="carried" value="{X}" relation="notcontains"/>
			</condition>
			<effect util="3">
				<set var="a_m" value="Excuse(DoNotCarryObject)" />
			</effect>
		</case>
	</rule>
	
	

	<rule>
		<case>
			<condition>
				<if var="a_u" value="None" relation="!="/>
			</condition>
			<effect util="-0.6">
				<set var="a_m" value="None" />
			</effect>		
		</case>
	</rule>
	
	
	<rule>
		<case>
			<effect util="-2.5">
				<set var="a_m" value="Do(*)" />
				<set var="a_m" value="Do({i_u})" relation="!=" />
			</effect>
			<effect util="-1.0">
				<set var="a_m" value="Ground(*)" />
				<set var="a_m" value="Ground({i_u})" relation="!=" />
			</effect>	
			<effect util="-2.5">
				<set var="a_m" value="Excuse(*)" />
			</effect>	
		</case>
	</rule>

	<rule>
		<case>
			<condition>
				<if var="a_m" value="Ground({X})" />
			</condition>
			<effect util="-2">
				<set var="a_m" value="Ground({X})" />
			</effect>
		</case>
	</rule>


	<rule>
		<case>
		<condition>
				<if var="a_m" value="AskRepeat" relation="!="/>
		</condition>
			<effect util="-0.5">
				<set var="a_m" value="AskRepeat" />
			</effect>
		</case>
			<case>
			<effect util="-0.8">
				<set var="a_m" value="AskRepeat" />
			</effect>
		</case>
	</rule>

	<rule>
		<case>
			<effect util="-0.2">
				<set var="a_m" value="Confirm({i_u})" />
			</effect>
			<effect util="-0.8">
				<set var="a_m" value="Confirm(*)" />
				<set var="a_m" value="Confirm({i_u})" relation="!=" />
			</effect>
		</case>
	</rule>


	<rule>
		<case>
			<condition>
				<if var="i_u" value="DoYouSee({X})" />
				<if var="perceived" value="{X}" relation="contains" />
			</condition>
			<effect util="3">
				<set var="a_m" value="Confirm" />
			</effect>
		</case>
		<case>
			<condition>
				<if var="i_u" value="DoYouSee({X})" />
				<if var="perceived" value="{X}" relation="notcontains" />
			</condition>
			<effect util="3">
				<set var="a_m" value="Disconfirm" />
			</effect>
		</case>
		<case>
			<effect util="-2">
				<set var="a_m" value="Confirm" />
			</effect>
			<effect util="-2">
				<set var="a_m" value="Disconfirm" />
			</effect>
		</case>
	</rule>

	<rule id="whatdoyousee">
		<case>
			<condition>
				<if var="i_u" value="WhatDoYouSee" />
			</condition>
			<effect util="3">
				<set var="a_m" value="Describe({perceived})" />
			</effect>
		</case>
		<case>
			<effect util="-2">
				<set var="a_m" value="Describe(*)" />
			</effect>
		</case>
	</rule>


</model>